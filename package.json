{
  "name": "edith-path",
  "version": "2.0.0",
  "main": "main.js",
  "description": "A little app to add folders easily to the PATH on Windows",
  "author": "Louis CELIER",
  "repository": {
    "type": "git",
    "url": "https://github.com/codisart/Edith-Path"
  },
  "dependencies": {
    "winreg": "~1.1.0",
    "jquery": "~2.2.0"
  },
  "scripts": {
    "tools": "npm install -g electron-packager@5.0.2 innosetup-compiler",

    "go": ".\\build\\scripts\\go_builder.bat",

    "package:ia32": "electron-packager . Edith-path --platform=win32 --arch=ia32 --version=0.35.1 --out=build/release/ --cache=build/cache/ --overwrite --ignore=build --ignore=go --ignore=config/dev.js",
    "package:x64": "electron-packager . Edith-path --platform=win32 --arch=x64 --version=0.35.1 --out=build/release/ --cache=build/cache/ --overwrite --ignore=build --ignore=go --ignore=config/dev.js",
    "package": "npm run package:ia32 & npm run package:x64",

    "setup:ia32": "innosetup-compiler build/scripts/ia32/compile_file.iss",
    "setup:x64": "innosetup-compiler build/scripts/x64/compile_file.iss",
    "setup": "npm run setup:ia32 & npm run setup:x64",

    "build": "npm run package & npm run go & npm run setup"
  },
  "license": "MIT"
}
